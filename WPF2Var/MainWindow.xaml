<Window x:Class="WPF2Var.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF2Var"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0"
                    Grid.Column="0">
            <TextBlock x:Name = "PostTb"
                        Text="Введите ваш рост"
                       Foreground="LightGray"/>
            <StackPanel Orientation="Horizontal">
            <TextBox x:Name="RostTb" Width="60" />
            <TextBlock x:Name = "SmTb"
                       Text="см"
                       Grid.Column="1"
                       Grid.Row="1"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="0"
                    Grid.Column="1">
            <TextBlock x:Name = "VESSTb"
                        Text="Введите ваш вес"
                       Foreground="LightGray"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="VesTb" Width="60" />
                <TextBlock x:Name = "KgTb"
                       Text="Кг"
                       Grid.Column="1"
                       Grid.Row="1"/>
            </StackPanel>
        </StackPanel>

        <Button x:Name="RasschetBtn"
                Background="AliceBlue"
                Grid.Column="2"
                Grid.Row="1"
                Content="Рассчитать"
                Click="RasschetBtn_Click"/>

        <StackPanel Orientation="Vertical" Grid.Row="1"
                    Grid.Column="0">
        <TextBlock x:Name="resultTb"
                   Text="результат"
                   Foreground="LightGray"/>
        <TextBox x:Name="restb"/>
        </StackPanel>

    </Grid>
</Window>
